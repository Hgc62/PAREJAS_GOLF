<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>GOLF Y TORREZNOS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel='stylesheet'
          type='text/css'
          media='only screen and (min-width: 800px) and (min-device-width: 600px)'
          href='/stylesheets/wide.css'/>
    <link rel='stylesheet'
          type='text/css'
          media='only screen and (max-width: 480px)'
          href='/stylesheets/smartphone.css'/>
  </head>

  <body>
    <div id="page">
      <header class="main" id="mainHeader">

          <h1>Torneo Golf y Torreznos</h1>
      </header>
  
      <nav class="main" id="mainNav" role="navigation">
          <a class="enlace" href="/">Inicio</a>
          <a class="enlace" href="/nuevo_partido">Introducir partido</a>
          <a class="enlace" href="/consulta_partidos">Consulta partidos</a>
          <a class="enlace" href="/clasificacion">Clasificación</a>
          
        </nav>
  
      <section class="main" id="mainSection">
            <% if (messages.info) { %>
              <article id='flashinfo'>
                  <h3>Información de interés:</h3>
                  <ul>
                      <% for (var i in messages.info) { %>
                          <li> <%= messages.info[i] %> </li>
                      <% } %>
                  </ul>
              </article>
          <% } %>

          <% if (messages.success) { %>
              <article id='flashsuccess'>
                  <h3>Tarea completada con éxito:</h3>
                  <ul>
                      <% for (var i in messages.success) { %>
                          <li> <%= messages.success[i] %> </li>
                      <% } %>
                  </ul>
              </article>
          <% } %>

          <% if (messages.error) { %>
              <article id='flasherror'>
                  <h3>Error:</h3>
                  <ul>
                      <% for (var i in messages.error) { %>
                          <li> <%= messages.error[i] %> </li>
                      <% } %>
                  </ul>
              </article>
          <% } %>

          <%- body %>

          <% if (locals.paginate_control) { %>
            <%- paginate_control %>
          <% } %>
         
      </section>
  
      <footer class="main" id="mainFooter">
          <h3>Golf los viernes en GOLF PARK</h3>
      </footer>
  </div>
  </body>
</html>
